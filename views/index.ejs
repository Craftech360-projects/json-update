<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Input Form</h1>
    
    <% if (typeof success !== 'undefined') { %>
      <div class="alert <%= success ? 'alert-success' : 'alert-error' %>">
        <%= message %>
      </div>
    <% } %>
    
    <form action="/submit" method="POST">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
      </div>

      <div class="form-group">
        <label for="prompt_selection">Initial Prompt:</label>
        <select id="prompt_selection" name="prompt_selection" required>
          <option value="puzzle_solver">Super-duper puzzle solver</option>
          <option value="story_teller">Amazing story teller</option>
          <option value="joke_teller">Hilarious joke teller</option>
          <option value="custom">Custom prompt</option>
        </select>
      </div>

      <div class="form-group" id="custom-prompt-group" style="display: none;">
        <label for="custom_prompt">Your Custom Role:</label>
        <input type="text" id="custom_prompt" name="custom_prompt" placeholder="Enter the role (e.g. magical wizard)">
        
        <label for="custom_action">What can you help with?:</label>
        <textarea id="custom_action" name="custom_action" rows="4" placeholder="Enter what you can help with"></textarea>
      </div>
      <div class="form-group">
        <label>Default Language: English</label>
      </div>

   
    
      <div class="form-group">
        <label for="language">Select Language:</label>
        <select id="language" name="language">
          <option value="English">English</option>


          <option value="hindi">Hindi</option>
          <option value="kannada">kannada</option>
          <option value="tamil">Tamil</option>
          <option value="malayalam">Malayalam</option>
          <option value="bhojpuri">Bhojpuri</option>
          <option value="punjabi">Punjabi</option>
        </select>
      </div>
      
      <button type="submit" class="btn">Submit</button>
    </form>
    
    <div class="info">
      <p>Your inputs will be saved to a JSON file.</p>
    </div>
    <button id="restartDocker" class="btn">Restart Docker</button>
    <div id="loader" class="loader" style="display: none;"></div>
  </div>
  <style>
.loader {
  border: 16px solid #f3f3f3; /* Light grey */
  border-top: 16px solid #3498db; /* Blue */
  border-radius: 50%;
  width: 120px;
  height: 120px;
  animation: spin 2s linear infinite;
  margin: 0 auto; /* Center the loader */
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
</style>
  <script>
    document.getElementById('prompt_selection').addEventListener('change', function() {
        const customPromptGroup = document.getElementById('custom-prompt-group');
        if (this.value === 'custom') {
            customPromptGroup.style.display = 'block';
        } else {
            customPromptGroup.style.display = 'none';
        }
    });
    document.getElementById('restartDocker').addEventListener('click', async function() {
    const loader = document.getElementById('loader');
    loader.style.display = 'block'; // Show loader
    try {
      const response = await fetch('/restart-docker', { method: 'POST' });
      const result = await response.json();
      loader.style.display = 'none'; // Hide loader after response
      alert(result.message);
    } catch (error) {
      loader.style.display = 'none'; // Hide loader on error as well
      alert('Failed to restart Docker');
    }
  });
    </script>
</body>
</html>
